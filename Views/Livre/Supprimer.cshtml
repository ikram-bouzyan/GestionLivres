@model GestionLivres.Models.Livre

@{
    ViewData["Title"] = "Supprimer Livres";
}

<h1>Modifier LIvre</h1>

<form asp-controller="Livre" asp-action="Supprimer" method="post">
    <div class="form-group">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Titre"></label>
        <input asp-for="Titre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Auteur"></label>
        <input asp-for="Auteur" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateEdition"></label>
        <input asp-for="DateEdition" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Resume"></label>
        <input asp-for="Resume" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Supprimer Livre</button>


</form>


